<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
     http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

    <persistence-unit name="desafio" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.desafio.jax.ibm.webservice.model.Pessoa</class>

        <properties>
            <!-- Driver JDBC para conexão com o H2database -->
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />

            <!-- Propriedades para conexão com o banco de dados -->
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:desafio"/>
	        <property name="javax.persistence.jdbc.user" value="sa"/>
	        <property name="javax.persistence.jdbc.password" value=""/>

	        <!-- Configurações do Hibernate -->
	        <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
	        <property name="hibernate.show_sql" value="true"/>
	        <property name="hibernate.format_sql" value="true"/>
	        <!-- Cria o banco de dados e as entidades necessárias -->
	        <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>